---
import IconsNetwork from './icons-network.astro'
---

<footer class="relative w-full flex flex-wrap justify-evenly py-12 font-inter">
  <svg class="absolute top-0 bottom-0 right-0 h-full -z-10 font" viewBox="0 0 1440 638" fill="none">
    <path
      d="M1440 638L0 638L-5.57757e-05 0.000125889L1440 0L1440 638Z"
      fill="url(#paint0_linear_451_5139)"></path>
    <defs>
      <linearGradient
        id="paint0_linear_451_5139"
        x1="1440"
        y1="638"
        x2="1314.32"
        y2="21.9417"
        gradientUnits="userSpaceOnUse"
      >
        <stop offset="0.0299349" stop-color="#383638"></stop>
        <stop offset="0.480319" stop-color="#0B0B0B"></stop>
      </linearGradient>
    </defs>
  </svg>
  <section
    class="flex flex-col w-[80%] md:w-[392px] px-8 py-6 bg-[#17181C] justify-center items-start gap-7 rounded-2xl"
  >
    <p class="text-blue-dark">Feedback</p>
    <h2 class="text-white font-bold text-3xl">
      <span class="text-white/40">Seeking personalized support?</span> Request a call from our team
    </h2>
    <form class="w-full flex flex-col gap-3">
      <div class="flex flex-col gap-2">
        <label class="block text-gray-dark">Email</label>
        <section class="relative">
          <input
            type="email"
            name="email"
            class="w-full icono-placeholder pl-9 pr-2 h-9 bg-transparent border-[1px] rounded-lg border-[#8B8E99] text-[#8B8E99]"
            placeholder="Example@email.com"
          />
          <svg
            class="absolute top-1/2 text-gray-dark -translate-y-1/2 left-2"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
          >
            <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
            <path
              d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z"
            ></path>
            <path d="M3 7l9 6l9 -6"></path>
          </svg>
        </section>
      </div>
      <div class="flex flex-col gap-2">
        <label class="block text-gray-dark">Username</label>
        <section class="relative">
          <input
            type="email"
            name="email"
            class="w-full icono-placeholder pl-9 pr-2 h-9 bg-transparent border-[1px] rounded-lg border-gray-dark text-gray-dark"
            placeholder="Feyz Ibrahim"
          />
          <svg
            class="absolute top-1/2 text-gray-dark -translate-y-1/2 left-2"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            stroke-width="2"
            stroke="currentColor"
            fill="none"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
              d="M8 7a4 4 0 1 0 8 0a4 4 0 0 0 -8 0"></path><path
              d="M6 21v-2a4 4 0 0 1 4 -4h4a4 4 0 0 1 4 4v2"></path></svg
          >
        </section>
      </div>
      <button class="bg-purple py-2 px-5 font-semibold rounded-lg text-white max-w-max"
        >Send Request</button
      >
    </form>
    <p class="text-xs text-gray-dark">Privacy</p>
  </section>
  <section class="w-[550px] flex justify-between flex-wrap">
    <div class="w-full flex flex-col max-h-max justify-evenly md:w-[420px] gap-5">
      <section class="flex justify-center md:justify-start gap-6 flex-wrap">
        <figure class="w-48 text-center md:text-start">
          <h2 class="text-purple mb-4">INFO</h2>
          <ul class="text-white">
            <li>Company</li>
            <li>Products</li>
            <li>Engineering</li>
            <li>Services</li>
            <li>Productions</li>
          </ul>
        </figure>
        <figure class="w-48 text-center md:text-start">
          <h2 class="text-purple mb-4">ABOUT US</h2>
          <ul class="text-white">
            <li>Gellery</li>
            <li>Technologies</li>
            <li>Contacts</li>
          </ul>
        </figure>
        <figure class="w-48 text-center md:text-start">
          <h2 class="text-purple mb-4">CONTACT US</h2>
          <ul class="text-white">
            <li>+91 73569 83827</li>
            <li>help@exiphones.com</li>
            <li>Calicut, KL, INDIA</li>
          </ul>
        </figure>
      </section>
      <div class="w-full flex justify-center md:justify-start text-white">
        <IconsNetwork bgfacebook="bg-white" colorfacebook="text-black" styleicons="text-white" />
      </div>
    </div>
    <figure
      class="w-full flex flex-col justify-center md:justify-between py-16 items-center md:items-end md:w-[105px]"
    >
      <img src="../../public/Logo.png" alt="" />
      <p class="text-[10px] text-gray-dark">© 2023 — ex-iphones</p>
    </figure>
  </section>
</footer>
